{
  "hooks": [
    {
      "event": "PostToolUse",
      "matcher": {
        "toolName": "Write",
        "input": {
          "path": "**/*.py"
        }
      },
      "action": {
        "type": "command",
        "command": "grep -q '@vibesafe' \"$FILE_PATH\" && vibesafe compile --target \"$FILE_PATH\" > /dev/null 2>&1 &"
      },
      "timeout": 5,
      "enabled": true
    },
    {
      "event": "PreToolUse",
      "matcher": {
        "toolName": "Bash",
        "input": {
          "command": "git commit*"
        }
      },
      "action": {
        "type": "command",
        "command": "vibesafe diff --exit-code"
      },
      "timeout": 10,
      "enabled": true
    }
  ]
}
